
@{
    ViewBag.Title = "ReportVer2_HTML";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    @section styles{
        <link href="~/Content/Custom_Global.css" rel="stylesheet" />
        <link href="~/Content/Custom_Cover.css" rel="stylesheet" />
        <link href="~/Content/Custom_Cover_EarthArea.css" rel="stylesheet" />
    }
    @section scripts{
        <script src="~/MoiraTool/Plugins/Font_awesome_5.13.0/all.min.js"></script>
        <script src="~/MoiraTool/Plugins/PrintArea/jquery.PrintArea.js"></script>
    }
</head>

<br />
@*<h2>ReportVer2_HTML</h2>*@

<body>
    <button class="btn btn-info" onclick="PrintArea()">Print Area</button>
    <div id="print">
        <!-- PC -->
        <div id="coverA4" class="A4 notShowMoblie">
            <div class="container" style="width:100%">
                <div class="row text-center">
                    <span style="font-size:30px">TQC 資訊科技素養能力測驗 ( Python ) 分析報告</span>
                </div>
                <div class="row text-center">
                    <span style="font-size:20px">Analysis Report of Infomation Technology Literacy</span>
                </div>
                <div class="row sm-Offset">
                    <div class="col-xs-8 col-sm-7 col-md-7 col-lg-7 col-md-offset-1 col-lg-offset-1" id="cover_ExamInfoArea">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                                <div class="col-xs-4 col-sm-4 col-md-3 col-lg-3" id="cover_ExamInfo_Calendar_Icon">
                                    <i class="fas fa-calendar-check fa-2x"></i>
                                </div>
                                <div class="col-xs-8 col-sm-8 col-md-9 col-lg-9 divExamInfo_Data">
                                    <span id="spanExamInfo_Date">2020/05/08</span>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 divExamInfo_DataArea_Top">
                                <div class="col-xs-4 col-sm-4 col-md-3 col-lg-3" id="cover_ExamInfo_User_Icon">
                                    <i class="fas fa-user fa-2x"></i>
                                </div>
                                <div class="col-xs-8 col-sm-8 col-md-9 col-lg-9 divExamInfo_Data">
                                    <span id="spanExamInfo_Date">韓羽伶</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 divExamInfo_DataArea_Bottom">
                                <div class="col-xs-4 col-sm-4 col-md-3 col-lg-3">
                                    <i class="fas fa-school fa-2x"></i>
                                </div>
                                <div class="col-xs-8 col-sm-8 col-md-9 col-lg-9 divExamInfo_Data">
                                    <span id="spanExamInfo_Date">德明財經大學</span>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 divExamInfo_DataArea_Bottom">
                                <div class="col-xs-4 col-sm-4 col-md-3 col-lg-3">
                                    <i class="fas fa-id-card fa-2x"></i>
                                </div>
                                <div class="col-xs-8 col-sm-8 col-md-9 col-lg-9 divExamInfo_Data">
                                    <span id="spanExamInfo_Date">A123456789</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="earthImageArea" class="col-xs-3 col-sm-4 col-md-4 col-lg-4">
                        <img id="earthImage" src="~/Images/earth.png" />
                        <hr id="earthBackLine_blackLine" class="blackLine" />
                        <hr id="earthBackLine_grayLine" class="grayLine" />
                    </div>

                </div>
            </div>
        </div>
        <!-- Moblie -->
        <div id="coverA4" class="A4 notShowPC">
            <div class="container" style="width:100%">
                <div class="row text-center">
                    <span style="font-size:30px">TQC 資訊科技素養能力測驗 ( Python ) 分析報告</span>
                </div>
                <div class="row text-center">
                    <span style="font-size:20px">Analysis Report of Infomation Technology Literacy</span>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-7 col-md-7 col-lg-7" id="cover_ExamInfoArea">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" id="cover_ExamInfo_Calendar_Icon">
                                    <i class="fas fa-calendar-check fa-2x"></i>
                                </div>
                                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 divExamInfo_Data">
                                    <span id="spanExamInfo_Date">2020/05/08</span>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 divExamInfo_DataArea_Top">
                                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3" id="cover_ExamInfo_User_Icon">
                                    <i class="fas fa-user fa-2x"></i>
                                </div>
                                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 divExamInfo_Data">
                                    <span id="spanExamInfo_Date">韓羽伶</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 divExamInfo_DataArea_Bottom">
                                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                    <i class="fas fa-school fa-2x"></i>
                                </div>
                                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 divExamInfo_Data">
                                    <span id="spanExamInfo_Date">XX大學</span>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 divExamInfo_DataArea_Bottom">
                                <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                                    <i class="fas fa-id-card fa-2x"></i>
                                </div>
                                <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9 divExamInfo_Data">
                                    <span id="spanExamInfo_Date">A123456789</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="earthImageArea" class="col-sm-4 col-md-4 col-lg-4 hidden-xs">
                        <img id="earthImage" src="~/Images/earth.png" width="250" height="250" />
                        <hr id="earthBackLine_blackLine" class="blackLine" />
                        <hr id="earthBackLine_grayLine" class="grayLine" />
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>

